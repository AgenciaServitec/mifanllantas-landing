---
const { name, brand, model, whatsapp, imagePath } = Astro.props;
---

<article class="product">
  <div class="product__img">
    <span class="product__destac">Destacado</span>
    <img src={imagePath} alt={name} />
  </div>
  <div class="product__text">
    <p>{name}</p>
    <p>{model}<span>{brand}</span></p>
    <a
      href=`https://api.whatsapp.com/send/?phone=51900959965&text=Hola%2C%20estoy%20interesado%2Fa%20en%20los%20Neum%C3%A1ticos%20${whatsapp}%20que%20vi%20en%20Multillantas%20MF.%20%C2%BFPodr%C3%ADan%20contarme%20un%20poco%20m%C3%A1s%20sobre%20ellos%3F`
      target="_blank">Cotizar</a
    >
  </div>
</article>

<style lang="scss">
  .product {
    background-color: var(--color-white);
    width: 100%;
    height: auto;
    font-weight: 700;
    position: relative;
    padding: 0.8rem;
    border-radius: 0.5em;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;

    &__img {
      width: 100%;
      height: 250px;
      background-color: var(--color-white);

      img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }

    &__destac {
      background-color: var(--color-dark-gray);
      position: absolute;
      top: 0.8rem;
      right: 0.8rem;
      padding: 0.3em;
      border-radius: 0.5em;
      letter-spacing: 2px;
    }

    &__text {
      width: 100%;
      height: auto;
      color: var(--color-secondary);
      position: relative;

      p:first-child {
        font-size: 1.2em;
      }

      p:nth-child(2) {
        margin: 1em 0;
        span {
          background-color: var(--color-primary);
          color: var(--color-secondary);
          padding: 0.2em;
          border-radius: 0.5em;
        }
      }

      a {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5em;
        width: 100%;
        height: 2.5em;
        border-radius: 0.5em;
        color: #000;
        background-color: var(--color-primary-hover);
        text-decoration: none;
        padding: 3px;
        &:hover {
          background-color: var(--color-primary);
          transition-duration: 0.6s;
        }
      }
    }

    span {
      color: var(--color-primary);
      margin-left: 0.3em;
    }
  }
</style>
