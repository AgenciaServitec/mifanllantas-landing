---
const { name, brand, model, imagePath } = Astro.props;
---

<article class="product">
  <div class="product__img">
    <span class="product__destac">Destacado</span>
    <img src={imagePath} alt={name} />
  </div>
  <div class="product__text">
    <p>{name}</p>
    <p>{model}<span>{brand}</span></p>
    <a href="/contact">Cotizar</a>
  </div>
</article>

<style lang="scss">
  .product {
    background-color: #fff;
    width: 100%;
    height: auto;
    font-weight: 700;
    position: relative;
    padding: 0.8rem;
    border-radius: 0.5em;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;

    &__img {
      width: 100%;
      height: 250px;
      background-color: #fff;

      img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }

    &__destac {
      background-color: #222;
      position: absolute;
      top: 0.8rem;
      right: 0.8rem;
      padding: 0.3em;
      border-radius: 0.5em;
      letter-spacing: 2px;
    }

    &__text {
      width: 100%;
      height: auto;
      background-color: #fff;
      color: #000;
      position: relative;

      p:first-child {
        font-size: 1.2em;
      }

      p:nth-child(2) {
        margin: 1em 0;
        span{
          background-color: #fff200;
          color: #000;
          padding: .2em;
          border-radius: .5em;
        }
      }

      a {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5em;
        width: 100%;
        height: 2.5em;
        border-radius: 0.5em;
        color: #000;
        background-color: #fff20044;
        text-decoration: none;
        padding: 3px;
        &:hover {
          background-color: #fff200;
          transition-duration: 0.6s;
        }
      }
    }

    span {
      color: #fff200;
      margin-left: 0.3em;
    }
  }
</style>
