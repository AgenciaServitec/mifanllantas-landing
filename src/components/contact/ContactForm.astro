---
const errors = { fullName: "", email: "", phoneNumber: "", message: "" };

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();

    const formData = {
      fullName: data.get("fullName"),
      email: data.get("email"),
      phoneNumber: data.get("phoneNumber"),
      message: data.get("message"),
    };

    if (typeof formData.fullName !== "string" || formData.fullName.length < 1) {
      errors.fullName = "Ingrese su nombre. ";
    }

    if (typeof formData.email !== "string" || formData.email.length < 1) {
      errors.email = "Ingrese su correo. ";
    }

    if (
      typeof formData.phoneNumber !== "string" ||
      (formData.phoneNumber.length < 1 && formData.phoneNumber.length > 9)
    ) {
      errors.phoneNumber = "Ingrese su número de celular. ";
    }

    const mapContact = (formData) => ({
      contact: {
        fullName: formData.fullName,
        email: formData.email,
        phone: {
          countryCode: "+51",
          number: formData.phoneNumber,
        },
        message: formData.message,
        hostname: "mifanllantas.com",
      },
    });

    console.log(mapContact(formData));

    const response = await fetch(
      "https://api-servitecsales.web.app/emails/contact",
      {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Accept: "application/json",
        },
        body: JSON.stringify(mapContact(formData)),
      }
    );

    const responseJson = await response.json();

    console.log(responseJson);

    // Do something with the data
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
---

<form method="POST" class="form-container">
  <div class="item-wrapper">
    <label for="fullName">Nombres y apellidos</label>
    <input type="text" id="fullName" name="fullName" />
    {errors.fullName && <p>{errors.fullName}</p>}
  </div>

  <div class="item-wrapper">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" />
    {errors.email && <p>{errors.email}</p>}
  </div>

  <div class="item-wrapper">
    <label for="phoneNumber">Teléfono</label>
    <input type="text" id="phoneNumber" name="phoneNumber" />
    {errors.phoneNumber && <p>{errors.phoneNumber}</p>}
  </div>
  <div class="item-wrapper">
    <label for="message">Mensaje</label>
    <textarea id="message" name="message" cols="30" rows="4"></textarea>
    {errors.message && <p>{errors.message}</p>}
  </div>

  <button class="btn-submit" id="btn-submit"> Enviar</button>
</form>

<style lang="scss">
