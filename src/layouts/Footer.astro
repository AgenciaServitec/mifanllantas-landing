<style lang="scss">
  .footer {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding: 0 1em;

    a {
      text-decoration: none;
      color: #fff;
      &:hover {
        color: #fff200;
        transition-duration: 0.6s;
      }
    }

    .footer-top {
      width: 100%;
      display: flex;
      justify-content: space-evenly;
      flex-wrap: wrap;
      gap: 2em;
      margin: 3rem 0;

      h3,
      span {
        color: #768290;
      }

      > div {
        flex: 1 1 20em;
      }

      &__information {
        background-color: #fff;
        color: #000;
        padding: 0.8em;
        border-radius: 0.5em;
        max-width: 23rem;
        display: flex;
        align-items: center;
        flex-direction: column;

        img {
          width: 12em;
        }

        p {
          margin: 1em 0 2em;
        }
      }

      &__social-networks {
        display: flex;
        justify-content: center;
        gap: 1em;
        a {
          width: max-content;
          display: flex;
          justify-content: center;
          align-items: center;
          border: 1px solid #000;
          border-radius: 50%;
          padding: 0.5em;
          color: #000;
          &:hover {
            background-color: #fff200;
            transition-duration: 0.6s;
          }
          span {
            display: none;
          }
        }
        color: #000;
      }

      &__sections {
        color: #fff;
        h3 {
          margin-bottom: 1em;
        }

        ul {
          list-style: none;
          display: flex;
          flex-direction: column;
          gap: 1em;
        }
      }

      &__contacts {
        h3 {
          margin-bottom: 1em;
        }
        div {
          display: flex;
          flex-direction: column;
          gap: 0.5em;
          margin-bottom: 1em;
        }
        p {
          display: flex;
          gap: 0.5em;
          align-items: center;
        }
      }
    }
    &__bottom {
      background: #000;
      width: 100%;
      padding: 1em;

      p {
        text-align: center;
        font-size: 0.9em;
        a {
          text-decoration: none;
        }
      }
    }
  }

  @media (min-width: 500px) {
    footer {
      .slogan-description {
        max-width: 50%;
      }
    }
  }

  @media (min-width: 992px) {
    .footer {
      .footer-top {
        > div {
          flex: none;
          p {
            font-size: 0.9em;
          }
        }
      }
    }
  }
</style>
