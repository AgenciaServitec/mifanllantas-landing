---
const errors = { fullName: "", email: "", phoneNumber: "", message: "" };

const validateField = (value, label, name) => {
  if (name === "message") return;
  if (value.length < 1) {
    errors[name] = `Ingrese ${label}`;
  }
};

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();

    const formData = [
      {
        value: data.get("fullName"),
        label: "Nombres y Apellidos",
        name: "fullName",
      },
      {
        value: data.get("email"),
        label: "Correo",
        name: "email",
      },
      {
        value: data.get("phoneNumber"),
        label: "Teléfono",
        name: "phoneNumber",
      },
      {
        value: data.get("message"),
        label: "Mensaje",
        name: "message",
      },
    ];

    formData.map((field) => {
      validateField(field.value, field.label, field.name);
    });

    const hasErrors = Object.values(errors).some((msg) => msg);

    if (hasErrors) {
      throw new Error(JSON.stringify(errors));
    }

    const mapContact = (formData) => ({
      contact: {
        fullName: formData?.[0].value || "",
        email: formData?.[1].value || "",
        phone: {
          countryCode: "+51",
          number: formData?.[2].value || "",
        },
        message: formData?.[3].value || "",
        hostname: "mifanllantas.com",
      },
    });

    const response = await fetch(
      "https://api-servitecsales.web.app/emails/contact",
      {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Accept: "application/json",
        },
        body: JSON.stringify(mapContact(formData)),
      }
    );

    const responseJson = await response.json();

    if (responseJson.ok) {
      return Astro.redirect("/success");
    }
  } catch (error) {
    if (error instanceof Error) {
      console.error("Error:", error.message);
    }
  }
}
---

<form method="POST" class="form-container">
  <div class="item-wrapper">
    <label for="fullName">Nombres y apellidos</label>
    <input type="text" id="fullName" name="fullName" />
    {errors.fullName && <p>{errors.fullName}</p>}
  </div>

  <div class="item-wrapper">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" />
    {errors.email && <p>{errors.email}</p>}
  </div>

  <div class="item-wrapper">
    <label for="phoneNumber">Teléfono</label>
    <input type="text" id="phoneNumber" name="phoneNumber" />
    {errors.phoneNumber && <p>{errors.phoneNumber}</p>}
  </div>
  <div class="item-wrapper">
    <label for="message">Mensaje</label>
    <textarea id="message" name="message" cols="30" rows="4"></textarea>
    {errors.message && <p>{errors.message}</p>}
  </div>

  <button class="btn-submit" id="btn-submit"> Enviar</button>
</form>

<style lang="scss">
  .form-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.8em;

    .item-wrapper {
      display: flex;
      flex-direction: column;
      align-items: start;

      &:first-child {
        grid-column: span 2;
      }

      &:nth-child(4),
      &:nth-child(5) {
        grid-column: span 2;
      }

      label {
        font-size: 0.8em;
        margin-bottom: 0.5em;
      }
      input,
      textarea {
        width: 100%;
        border-radius: 0.5em;
        font-size: 1.1em;
        padding: 0.6em;
        border-color: transparent;
        outline: none;
      }
    }

    .btn-submit {
      grid-column: span 2;
      margin: 0 auto;
      font-size: 1.2em;
      text-transform: upperCase;
      font-style: italic;
      background-color: #fff200;
      color: #fff;
      padding: 1em;
      border-radius: 7em;
      width: 100%;
      border-color: transparent;
      cursor: pointer;
    }

    .error-item {
      border: 1px solid red;
    }
  }
</style>
